			canvas:
				Color:
					rgba: 0,.4,0,.7
	        	Rectangle:
	            	pos: self.pos
	            	size: self.size
			Label:
				text:"email:"
				bold: True
			TextInput:
				id: username
				multiline: False
			Label:
				text:"Password:"
				bold: True
			TextInput:
				id: password
				multiline: False
				password: True
		SButton:
			back_color: (0, .4, 0, .8)
			bold: True
			text:"Login"
			size_hint: (.2,.07)
			pos_hint: {'x': .4, 'y': .3}
			on_release:
				Factory.LoadingPopup().open()
				#root.auth_user(username.text,password.text)
				#app.root.current ="Login_window"
				#root.manager.transition.direction = "left"

		SButton:
			back_color: (0, 0, .4, .8)
			bold: True
			text:"Cancel"
			size_hint: (.2,.07)
			pos_hint: {'x': .4, 'y': .21}
			on_release:
				#root.auth_user(username.text,password.text)
				app.root.current ="start_window"
